        <script><![CDATA[// ดึง Approval record ของ user คนนี้
var appr = new GlideRecord('sysapproval_approver');
appr.addQuery('sysapproval', current.sys_id);
appr.addQuery('approver', gs.getUserID());
appr.addQuery('state', 'requested');
appr.setLimit(1);
appr.query();

if (appr.next()) {
    // ดึงเหตุผลจาก Parking Reservation record
    var reason = current.getValue('approval_reason') || '';
    
    // อัพเดท Approval state
    appr.setValue('state', 'rejected');
    
    // ใส่เหตุผลลง comments
    if (reason) {
        appr.setValue('comments', reason);
    }
    
    appr.update();
    
    // อัพเดท Parking Reservation status
    current.setValue('reservation_status', 'rejected');
    current.update();
    
    gs.addInfoMessage('✗ Reject เรียบร้อยแล้ว');
    
} else {
    gs.addErrorMessage('❌ ไม่พบรายการอนุมัติของคุณ (อาจไม่ได้เป็น approver หรือไม่ได้อยู่ state=requested)');
}

action.setRedirectURL(current);]]></script>
