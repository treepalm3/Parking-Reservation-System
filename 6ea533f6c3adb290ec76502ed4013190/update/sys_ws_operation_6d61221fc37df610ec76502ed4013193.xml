        <name>Update Status</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
    var requestBody = request.body.data;
    if (requestBody && requestBody.issue && requestBody.issue.key) {
        var jiraKey = requestBody.issue.key;
        
        var gr = new GlideRecord('x_1869622_parkin_0_parking_reservation');
        gr.addQuery('correlation_id', jiraKey);
        gr.query();

        if (gr.next()) {
            gr.reservation_status = 'confirmed'; 
            gr.work_notes = 'Jira Task ' + jiraKey + ' is Done.';
            gr.update(); // พอ update บรรทัดนี้ เดี๋ยว Notification จะทำงานเองครับ
            
            return { status: "Success", message: "Updated " + gr.number };
        }
    }
    return { status: "Not Found" };
})(request, response);]]></operation_script>
